{
    "name": "logs-opacity",
    "displayName": "logs-opacity",
    "description": "VScode extension for logs opacity.",
    "version": "0.0.1",
    "engines": {
        "vscode": "^1.108.1"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onStartupFinished"
    ],
    "contributes": {
        "commands": [
            {
                "command": "logs-opacity.changeOpacity",
                "title": "Logs: Change Opacity"
            }
        ],
        "configuration": {
            "title": "Logs Opacity",
            "properties": {
                "logsOpacity.opacity": {
                    "type": "number",
                    "default": 50,
                    "minimum": 0,
                    "maximum": 100,
                    "description": "Opacity level for console.log and log.* statements (0 to 100)"
                }
            }
        }
    },
    "main": "./dist/extension.js",
    "scripts": {
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "clean": "rm -rf ./dist",
        "vscode:prepublish": "npm run compile",
        "vscode:package": "vsce package"
    },
    "devDependencies": {
        "@types/mocha": "^10.0.10",
        "@types/node": "22.x",
        "@types/vscode": "^1.108.1",
        "@vscode/test-cli": "^0.0.12",
        "@vscode/test-electron": "^2.5.2",
        "esbuild": "^0.27.2",
        "eslint": "^9.39.2",
        "npm-run-all": "^4.1.5",
        "typescript": "^5.9.3",
        "typescript-eslint": "^8.52.0"
    }
}
